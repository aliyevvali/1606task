@model Category
@{
    ViewData["Title"] = "Edit";
}
<div class="container-fluid">
    <form method="post" enctype="multipart/form-data">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="CategoryName">CategoryName</label>
                <input asp-for="CategoryName" class="form-control" placeholder="CategoryName">
            </div>

        </div>
        <div class="form-group">
            <button asp-controller="Category" asp-action="Edit" type="submit" class="btn btn-primary">Edit</button>
            <button asp-controller="Category" asp-action="Index" class="btn btn-md rounded font-sm hover-up btn-primary">Go Back</button>

        </div>
    </form>
</div>


